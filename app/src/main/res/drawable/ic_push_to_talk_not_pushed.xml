<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Circular background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/purple_500"/>
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>
    </item>
    <!-- Microphone Icon -->
    <item android:drawable="@drawable/ic_microphone_white"
        android:gravity="center"
        android:width="25dp"
        android:height="25dp"/>
</layer-list>