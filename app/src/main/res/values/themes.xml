<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlueTalk" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BlueTalk.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BlueTalk.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your app bar theme here -->
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/purple_500</item>
        <!-- Add more custom attributes if needed -->
    </style>

    <style name="Theme.BlueTalk.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your pop-up theme here -->
        <item name="android:textColor">@color/teal_700</item>
        <!-- Add more custom attributes if needed -->
    </style>
</resources>