<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ConversationListFragment">

    <fragment
        android:id="@+id/ConversationListFragment"
        android:name="com.example.bluetalk.ui.ConversationListFragment"
        android:label="Conversation List Fragment"
        tools:layout="@layout/fragment_conversation_list">
        <action
            android:id="@+id/action_conversationListFragment_to_chatFragment"
            app:destination="@id/ChatFragment"
        />

    </fragment>

    <fragment
        android:id="@+id/ChatFragment"
        android:name="com.example.bluetalk.ui.ChatFragment"
        android:label="Chat Fragment"
        tools:layout="@layout/chat_layout">
        <argument
            android:name="deviceAddress"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="string"/>
        <argument
            android:name="name"
            app:argType="string"/>
        <action
            android:id="@+id/action_chatFragment_to_walkieTalkie"
            app:destination="@id/WalkieTalkie"
            />
        <action
            android:id="@+id/action_chatFragment_to_conversations"
            app:destination="@id/ConversationListFragment"
            />

    </fragment>

    <fragment
        android:id="@+id/SettingsFragment"
        android:name="com.example.bluetalk.ui.SettingsFragment"
        android:label="Settings Fragment">
    </fragment>

    <fragment
        android:id="@+id/UsersScanFragment"
        android:name="com.example.bluetalk.ui.UsersScanFragment"
        android:label="Devices Fragment"
        tools:layout="@layout/fragment_users">
        <action
            android:id="@+id/action_userScanFragment_to_chatFragment"
            app:destination="@id/ChatFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/WalkieTalkie"
        android:name="com.example.bluetalk.ui.WalkieTalkie"
        android:label="Walkie Talkie"
        tools:layout="@layout/fragment_walkie_talkie"

        />


</navigation>