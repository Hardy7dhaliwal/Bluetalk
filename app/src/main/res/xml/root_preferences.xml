<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Username">

        <EditTextPreference
            app:key="username"
            app:title="Your Username"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

    <PreferenceCategory app:title="SOS">

    <SwitchPreferenceCompat
        app:key="sos"
        app:title="Enable to Receive SOS Alerts"
        app:summaryOff="You will not receive SOS Alerts"
        app:summaryOn="You will receive SOS alerts"/>

</PreferenceCategory>

    <PreferenceCategory app:title="Notification">

        <SwitchPreferenceCompat
            app:key="notification"
            app:title="Enable to Receive Notification"
            app:summary="Be notified while chatting"
            />

    </PreferenceCategory>

</PreferenceScreen>